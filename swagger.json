{
    "openapi": "3.0.1",
    "info": {
      "title": "Api  transferência monetária",
      "description": "Sistema de transferência de  valores entre as contas",
      "version": "1.0.0"
    },
    "basePath": "/",
  
    "components": {
      "securitySchemes": {
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      }
    },
  
    "paths": {
      "/usuario/listar": {
        "get": {
          "description": "Rota que busca produto pelo nome",
          "sumary": "Busca de um produto pelo nome",
          "tags": ["Listar usuarios"],
          "responses": {
            "200": {
              "description": "OK"
            }
          }
        }
      },
  
      "/usuario/criar": {
        "post": {
          "tags": ["Criar usuario"],
          "security": [{"bearerAuth": []}],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "nome": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "senha": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "nome": "admin",
                    "email": "admin@gmail.com",
                    "senha": "admin"
                  }
                }
              }
            }
          },
          "parameters": [
            {
              "in": "query",
              "name": "nome",
              "type": "string",
              "required": true
            },
            {
                "in": "query",
                "name": "email",
                "type": "string",
                "required": true
            },
              {
                "in": "query",
                "name": "senha",
                "type": "string",
                "required": true
              }
          ],
        "responses": {
          "401": {
            "description": "Unauthorized"
          },
          "400": {
            "description": "this product already exist"
          },
          "200": {
            "description": "Usuário cadastrado com sucesso!"
          }
        }
        }
      },
      "":{
        
      }
    }
  }